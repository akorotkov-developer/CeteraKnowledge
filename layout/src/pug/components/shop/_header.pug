            .tractor__item(data-tab='panel3')
                .grid-x.grid-padding-x
                    .shrink.cell
                        img(src="./i/tr1.png", alt="").tractor__icon
                    .auto.cell.tractor__info
                        .tractor__title Снегоуборочная техника
            .tractor__item(data-tab='panel4')
                .grid-x.grid-padding-x
